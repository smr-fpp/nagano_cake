
  <div class="container">
    <p>商品新規登録</p>
    
      <%= form_with model: @item ,url: '/admin/items', method: :post do |f| %>
      <div class="form-group row justify-content-center">
          <%= f.label :商品画像 ,class: "col-sm-3" %>
          <div class="col-sm-8">
            <%= f.attachment_field :image %>
          </div> 
      </div>
    
      <div class="form-group row justify-content-center">
          <%= f.label :商品名 ,class: "col-sm-3" %>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control col-sm-8", placeholder: "商品名" %>
          </div>
      </div>
      
      <div class="form-group row justify-content-center">
          <%= f.label :商品説明 ,class: "col-sm-3" %>
          <div class="col-sm-8">
            <%= f.text_area :introduction, class: "form-control col-sm-8" , rows: "5", placeholder: "ここに説明文を記述します" %>
          </div> 
      </div>
      
    
      <div class="form-group row justify-content-center">
          <%= f.label :ジャンル ,class: "col-sm-3" %>
        <div class="col-sm-8">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>

        </div>  
      </div>
      
    
      <div class="form-group row justify-content-center">
          <%= f.label :税抜価格 ,class: "col-sm-3" %>
          <div class="col-sm-8 d-inline-flex">
            <%= f.text_field :price, class: "form-control col-sm-8", placeholder: "1000" %><span>　円</span>
          </div>
      </div>
      
      
      <div class="form-group row justify-content-center">
          <%= f.label :販売ステータス ,class: "col-sm-3" %>
          <div class="col-sm-8">
            <div class="form_check form-check-inline">
              <label>
              <%= f.radio_button :is_active, 'true' %> <%= f.label :is_active, '販売中', value: true %>
              </label>
            </div>
            <div class="form_check form-check-inline">
              <label>
              <%= f.radio_button :is_active, 'false' %> <%= f.label :is_active, '販売停止', value: false %>
              </label>
            </div>
          </div> 
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
      <% end %>

  </div>
