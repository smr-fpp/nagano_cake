<div class="container">
  <div class="row mt-5">
    <div class="col"><p>商品一覧</p></div>
    <div class="col text-right"><a class="btn btn-outline-dark rounded-circle p-0" style="width:2rem;height:2rem;" href="/admin/items/new">＋</a></div>
  </div>
  <table class="table table-borderless">
    <thead class="table-light">
      <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
      <tr>
        <td>
          <%= item.id %>
        </td>
        <td>
          <%= link_to item.name, admin_item_path(item.id) %>
        </td>
        <td>
          <%= item.price.to_s(:delimited, delimiter: ',') %>
        </td>
        <td>
            <%= item.genre.name %>
        </td>
        <td>
          <% if item.is_active == true %>
            <span class="text-success">販売中</span>
            <% else %>
            <span class="text-secondary">販売停止中</span>
          <% end %>
        </td>
      </tr>

    </tbody>
    <% end %>
  </table>
  <%= paginate @items %>
  </div>
