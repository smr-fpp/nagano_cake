<div class="container">
  
  <p>管理者ログイン</p>
  
 
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row justify-content-center">
      <%= f.label :メールアドレス, class: "col-sm-4" %>
      <div class="col-sm-6">        
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>
    
    <div class="form-group row justify-content-center">
      <%= f.label :パスワード, class: "col-sm-4" %>
        <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>
    </div>
      
    <div class="form-group row justify-content-center">
      <div class="col-sm-4"></div>
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
    <% end %>


    <%= render "admin/shared/links" %>
  </div>

</div>



