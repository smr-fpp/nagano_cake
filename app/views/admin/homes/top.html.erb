<div class="container">
  <div class="row">
    <div class="col-10">
      <p>注文履歴一覧</p>
      <table class="table-bordered col-12" cellpadding="10">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %>
          </td>
          <td>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <% @subamount += order_detail.amount %>
              
            <% end %>
            <%= @subamount %>
            <% @subamount = 0 %>
          </td>
          <td>
            <%= order.status_i18n %>
          </td>
        </tr>
        <% end %>
        
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
