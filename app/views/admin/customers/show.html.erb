<div class="container">
  
  <p><%= @customer.first_name + " " + @customer.last_name %></p>
  
    <div class="row">

      
      <div class="col-8">
        <table class="table table-borderless">
          
            <tr>
              <th scope="row" style="width: 40%">会員ID</th>
              <td style="width: 60%"><%= @customer.id %></td>
            </tr>
          
            <tr>
              <th scope="row">氏名</th>
              <td><%= @customer.first_name + " " + @customer.last_name %></td>
            </tr>
          
            <tr>
              <th scope="row">フリガナ</th>
              <td><%= @customer.first_name_kana + " " + @customer.last_name_kana %></td>
            </tr>

            <tr>
              <th scope="row">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>

            <tr>
              <th scope="row">住所</th>
              <td><%= @customer.address %></td>
            </tr>
            
            <tr>
              <th scope="row">電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>             

            <tr>
              <th scope="row">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr> 
            
            <tr>
              <th scope="row">会員ステータス</th>
               <td>
                <% if @customer.is_deleted == false %>
                  <span class="text-success">有効</span>
                  <% else %>
                  <span class="text-secondary">退会</span>
                <% end %>
              </td>
            </tr>
            <tr>
              <th></th>
              <td>
                <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-5" %>
                <%= link_to "注文履歴一覧を見る", edit_admin_customer_path(@customer.id), class: "btn btn-primary" %>
              </td>
            </tr>            
         </table>
       </div>  
    </div>
</div>




