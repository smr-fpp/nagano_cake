<div class="container">
  <p>注文情報確認</p>
  
  <div class="row">
    <table class="table-bordered col-7">
      <tr class="table-secondary">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
      <% @cart_items.each do |cart_item| %> 
      <tr>
        <td>
          <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: '50x50' %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.with_tax_price.to_s(:delimited, delimiter: ',') %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
          <%= cart_item.subtotal.to_s(:delimited, delimiter: ',') %> 
        </td>
      </tr>
      <% end %>
    </table>
        <table class="table-bordered col-3 offset-1">
          <tr>
            <th class="table-secondary">送料</th>
            <td><%= @shipping_cost %></td>
          </tr>
          <tr>
            <th class="table-secondary">合計金額</th>
            <td>
              <% @cart_items.each do |cart_item| %>
              <% @total += cart_item.subtotal %>
              <% end %>
              <%= @total %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary">請求金額</th>
            <td>
              <% @total_payment = @shipping_cost + @total %>
              <%= @total_payment %>
            </td>
          </tr>
        </table>    
  
  </div>
  <div class="row mt-3">
    <div class="col-2">
      <strong>支払い方法</strong>
    </div>
  
    <div class="col-6">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-2">
      <strong>お届け先</strong>
    </div>
  
    <div class="col-6">
      <%= @order.postal_code %> <%= @order.address %></br>
      <%= @order.name %>
    </div>
    
  </div>
  
  <div class="row mt-5">
    <div class="d-flex justify-content-center">
      <%= form_with model: @order, url: orders_create_path do |f| %>
      <%= f.hidden_field :order, value: @order.id %>
      <%= f.submit '注文を確定する', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  
</div>
