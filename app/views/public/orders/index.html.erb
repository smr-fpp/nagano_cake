<div class="container">
  <p>注文履歴一覧</p>
  
  <div class="row">
    <table class="table-bordered col-10">
      <tr class="table-secondary">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
　　　　<th>ステータス</th>
　　　　<th>注文詳細</th>
      </tr>
      <% @orders.each do |order| %> 
      <tr>
        <td>
          <%= order.timestamps %>
        </td>
        <td>
          <%= order.address %>
        </td>
        <td>
          <%= order.cart_item.name %>
        </td>
        <td>
          <%= order.total_payment %>
        </td>
        <td>
          <%= order.status %>
        </td>        
      </tr>
      <% end %>
    </table>

  
</div>
