<div class="container">
  <p>注文履歴一覧</p>
  
  <div class="row">
    <table class="table-bordered col-12" cellpadding="10">
      <tr class="table-secondary">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
　　　　<th>ステータス</th>
　　　　<th>注文詳細</th>
      </tr>
      <% @orders.each do |order| %> 
      <tr>
        <td>
          <%= order.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td width="30%">
          <%= "〒"+order.postal_code %></br>
          <%= order.address %></br>
          <%= order.name %>
        </td>
        <td>
          <% @cart_items.each do |cart_item| %> 
            <%= cart_item.item.name %></br>
          <% end %>
        </td>
        <td>
          <%= order.total_payment %>円
        </td>
        <td>
          <%= order.status_i18n %>
        </td>
        <td>
          <%= link_to "表示する", orders_show_path(order), class: "btn btn-primary btn-sm mx-2 d-flex justify-content-center" %>
        </td> 
      </tr>
      <% end %>
    </table>

  
</div>
