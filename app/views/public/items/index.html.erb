<div class="container">
  <div class="row">
    <div class="col-md-3 h-50">
      <table class="table table-borderless">
        <thead class="table-bordered">
          <tr>
            <th scope="col">ジャンル検索</th>
          </tr>
        </thead>
        <tbody class="table-bordered">
          <tr>
            <td>ケーキ</td>
          </tr>
          <tr>
            <td>焼き菓子</td>
          </tr>
          <tr>
            <td>プリン</td>
          </tr>
          <tr>
            <td>キャンディ</td>
          </tr>

        </tbody>
      </table>


    </div>
    <div class="col-md-9">
    <div class="row">
      <span style="display: inline-block"><h2 style="display: inline-block" class=mr-2>商品一覧</h2><p style="display: inline-block">(全<%= @items_count %>件)</p></span>
    </div>
      <div class="row row-cols-4 d-flex flex-row">
        
        <% @items.each do |item| %> 
      
          <div class="col mb-5">
            
            <%= link_to attachment_image_tag(item, :image, format: 'jpeg'), item_show_path(item.id) %></br>
        
            <%= item.name %></br>
            <%= "￥"+(item.price*1.1).round.to_s(:delimited, delimiter: ',') %>
          </div>
        
      
        <% end %>
      </div>
      <div class="row">
        <%= paginate @items %>
      </div>
    </div>
    
  </div>
</div>
