<div class="container">
  
  <p>配送先登録/一覧</p>

      <%= form_with model: @address, url: update_address_path(@address), method: :patch do |f| %>
      <div class="row">
        <div class="col-12">
        <table class="table table-borderless">
          
          
          <tr>
            <th class="col-3">郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code, class: "form-control col-8",autofocus: true, placeholder: "0000000" %></td>
            
          </tr>
            
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
              <td></td>
            </tr>
  
             <tr>
              <th >宛名</th>
              <td><%= f.text_field :name, class: "form-control col-8", placeholder: "令和道子" %></td>
              <td><%= f.submit "変更内容を保存", class: "btn btn-success mr-5" %></td>
            </tr>
      
         </table>
         </div>
       <% end %>
       </div>
</div>