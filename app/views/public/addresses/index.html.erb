<div class="container">
  
  <p>配送先登録/一覧</p>
  
    <div class="row">
    <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
      <div class="col-12">
        <table class="table table-borderless">
          
            <tr>
              <th scope="row">郵便番号(ハイフンなし)</th>
              <td><%= f.text_field :postal_code, class: "form-control col-sm-8", placeholder: "0000000" %></td>
            </tr>
            
            <tr>
              <th scope="row">住所</th>
              <td><%= f.text_field :address, class: "form-control col-sm-8", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
            </tr>
  
             <tr>
              <th scope="row">宛名</th>
              <td><%= f.text_field :name, class: "form-control col-sm-8", placeholder: "令和道子" %></td>
              <td><%= f.submit "新規登録", class: "btn btn-success mr-5" %></td>
            </tr>
      
         </table>
       </div> 
       <% end %>
    </div>
    
    <div class="row">
      <% @addresses.each do |address| %>
        <div class="col-10">
          <table class="table table-bordered">
            <tr>
              <th scope="row" class="table-secondary">郵便番号</th>
              <td><%= address.postal_code %></td>
            </tr>

            <tr>
              <th scope="row" class="table-secondary">住所</th>
              <td><%= address.address %></td>
            </tr>
            
            <tr>
              <th scope="row" class="table-secondary">郵便番号</th>
              <td><%= address.name %></td>
            </tr>

            <tr>
              <th scope="row" class="table-secondary">郵便番号</th>
              <td><%= link_to "編集する",edit_address_path, class: "btn btn-primary mr-2" %><%= link_to "削除する",edit_address_path, class: "btn btn-danger mr-2" %></td>
            </tr>
            
          </table>
        </div>
      <% end %>
    </div>
</div>




